<dt class="show-page-label blacklight-<%= field_name.parameterize %>">
  <%= Umedia::LocalizedMetadataFieldComponent.new(field: field, show: true).label(locale: current_locale) %>
</dt>

<% rendered = Array.wrap(field_presenter.render).reject { |value| value.blank? }.map { |rendered| field_presenter.field_config[:raw] ? raw(rendered) : rendered } %>
  <% if rendered.length == 1 %>
    <dd class="blacklight-<%= field_name.parameterize %> ">
      <%= safe_join(Array.wrap(rendered)) %>
    </dd>
  <% elsif rendered.length > 1 %>
    <dd class="blacklight-<%= field_name.parameterize %> ">
      <% rendered.each do |value| %>
        <%= value %>,
      <% end %>
    </dd>
<% end -%>
